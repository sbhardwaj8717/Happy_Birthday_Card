<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#78B32020"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="350dp"
        android:text="@string/bros_bday"
        android:textSize="24sp"
        android:background="@color/teal_200"
        android:textColor="#0620A7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/nameLikhLeYha"
        android:layout_width="228dp"
        android:layout_height="59dp"
        android:background="#FFFFFF"
        android:hint="@string/enter_name"
        android:textColorHint="#B2000000"
        android:inputType="textPersonName"
        android:textColor="#090004"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.242" />

    <Button
        android:id="@+id/btn"
        android:layout_width="164dp"
        android:layout_height="77dp"
        android:background="@color/black"

        android:onClick="btnDbGya"
        android:padding="-2dp"
        android:text="@string/bake_the_cake"
        android:textColor="#fff"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nameLikhLeYha"
        app:layout_constraintStart_toStartOf="@+id/nameLikhLeYha"
        app:layout_constraintTop_toBottomOf="@+id/nameLikhLeYha"
        app:layout_constraintVertical_bias="0.473" />


</androidx.constraintlayout.widget.ConstraintLayout>